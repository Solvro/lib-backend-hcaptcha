{
  "name": "@solvro/hcaptcha",
  "version": "0.0.0",
  "description": "A simple typed wrapper around the hcaptcha API",
  "keywords": [
    "hcaptcha",
    "captcha"
  ],
  "homepage": "https://github.com/Solvro/lib-backend-hcaptcha#readme",
  "bugs": {
    "url": "https://github.com/Solvro/lib-backend-hcaptcha/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Solvro/lib-backend-hcaptcha.git"
  },
  "license": "MPL-2.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "main": "index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup lib/*.ts --format cjs,esm --dts",
    "lint": "tsc && eslint && prettier --check .",
    "test": "mocha"
  },
  "prettier": "@solvro/config/prettier",
  "mocha": {
    "extension": ".test.ts",
    "require": [
      "ts-node-maintained/register",
      "./test/support/setup.ts"
    ]
  },
  "devDependencies": {
    "@solvro/config": "^1.13.5",
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "chai-spies": "^1.1.0",
    "eslint": "^9.27.0",
    "mocha": "^11.5.0",
    "prettier": "^3.5.3",
    "ts-node-maintained": "^10.9.5",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
